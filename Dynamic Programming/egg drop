
#include<bits/stdc++.h>
using namespace std;


class Solution{
    public:
    int eggDrop(int n, int k) 
    {
        
        if(k==0 || k==1)
            return k;
        if(n==1)
            return k;
        int mn=INT_MAX;
        for(int i=1;i<=k;i++){
            int tmp=1+max(eggDrop(n-1,i-1),eggDrop(n,k-i));
            if(mn>tmp)
            mn=tmp;
        }
        
        return mn;
    }
};

int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        //taking eggs and floors count
        int n, k;
        cin>>n>>k;
        Solution ob;
        //calling function eggDrop()
        cout<<ob.eggDrop(n, k)<<endl;
    }
    return 0;
}
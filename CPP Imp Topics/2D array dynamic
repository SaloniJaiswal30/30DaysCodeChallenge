#include <iostream>
#include<bits/stdc++.h>
using namespace std;

int main() {
    int *a=new int[5*6];
    for(int i=0;i<5;i++){
        for(int j=0;j<6;j++){
            *(a+i*5+j)=i*j;
        }
    }
    for(int i=0;i<5;i++){
        for(int j=0;j<6;j++){
            cout<<*(a+i*5+j)<<" ";
        }
        cout<<"\n";
    }
    cout<<"--------\n";
    int **b=new int*[5];
    for(int i=0;i<5;i++){
        b[i]=new int[6];
    }
    for(int i=0;i<5;i++){
        for(int j=0;j<6;j++){
            b[i][j]=i*j;
        }
    }
    for(int i=0;i<5;i++){
        for(int j=0;j<6;j++){
            cout<<b[i][j]<<" ";
        }
        cout<<"\n";
    }
    return 0;
   
   
}



/*
--output--
0 0 0 0 0 0 
0 1 2 3 4 0 
0 2 4 6 8 0 
0 3 6 9 12 0 
0 4 8 12 16 20 
--------
0 0 0 0 0 0 
0 1 2 3 4 5 
0 2 4 6 8 10 
0 3 6 9 12 15 
0 4 8 12 16 20 

*/